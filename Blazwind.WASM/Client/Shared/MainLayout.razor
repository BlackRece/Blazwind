@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-100">
    <div class="w-64 bg-gradient-to-r from-blue-400 to-blue-600 text-white flex-shrink-0">
        <div class="h-full p-4">
            <NavMenu />
        </div>
    </div>

    <div class="flex flex-col flex-grow overflow-y-auto">
        <header class="bg-white shadow">
            <div class="top-row px-4 py-2">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>
        </header>

        <article class="content px-4 py-8 flex-grow">
            @Body
        </article>

        <footer class="bg-blue-900 text-white text-center p-4">
            Dark Blue Footer
        </footer>
    </div>
</div>